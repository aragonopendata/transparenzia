<%= form_tag "", {:method=>'GET'} do %>
  <div class="deco-cont">
    <div class="row">
      <div class="large-12 columns" data-filtros>
        <div class="row">
          <div class="large-4 columns">
            <a href="<%= agreements_path(request.query_parameters) %>" class="button hollow">Número de convenios</a>
            <a href="<%= agreements_path(request.query_parameters.merge(:type => 'amount'))%>" class="button hollow">Cuantía del convenio</a>
            <a href="<%= agreements_path(request.query_parameters.merge(:type => 'percentage'))%>" class="button hollow">Porcentaje de participación</a>
            <a href="<%= agreements_path(request.query_parameters.merge(:type => 'entities'))%>" class="button hollow">Número de entidades</a>        
          </div>
          <div class="large-4 columns">
            <a href="#" class="button hollow active">Título convenio</a>
            <a href="#" class="button hollow">Firmante</a>
            <a href="#" class="button hollow">Fecha de convenio</a>        
          </div>
          <div class="large-4 columns">
            <%= text_field_tag(:title, params[:title], :placeholder => "escriba el título del convenio") %>
            <%= text_field_tag(:signatories, params[:signatories], :placeholder => "escriba el nombre del firmante") %>
            <%= select_tag(:year, options_for_select(2008..2013, params[:year]),  {prompt: 'Todos los años'}) %>
          </div>
        </div>
      </div>
    </div>
    <div class="inner-deco">
      <div class="row">
        <div class="large-4 large-centered columns submit-deco">
          <input type="submit" class="button" value="APLICAR">  
        </div>
      </div>
    </div>  
  </div>
<% end %>